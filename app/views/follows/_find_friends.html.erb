<data></data>iv id="ajax-modal" class="modal-dialog" tabindex="-1">
  <div class='modal-header'>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Find Friends</h3>
  </div>
  <div class='modal-body'>
    <div class="modal-body-content">
      <% if @users.present? %>
      	<% @users.each do |user| %>
          <%= image_tag user.image.thumb.url if user.image.thumb.url%>
  	    	<%= user.username %> 
  	    	<%= form_tag follows_path(user_id: user.id), method: :post, remote: true do %>
  	      	<%= button_tag 'follow', class: 'btn btn-success' %>
  			  <% end %>
  			 <% end %>
      <% else %>
        No users found
      <% end %>
    </div>
    <div class="ajax-loader"></div>
  </div>
  <div class='modal-footer'>
    <button type="button" data-dismiss="modal" class="btn">Close</button>
  </div>
</div>
